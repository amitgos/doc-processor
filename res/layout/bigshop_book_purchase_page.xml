<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:background="#FFFFFF"
			android:orientation="vertical">
  	<ScrollView 
  			android:layout_width="fill_parent"
			android:layout_height="fill_parent">
  	<LinearLayout 
  			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical">
  
    	<LinearLayout 
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="center_horizontal"
    		android:layout_margin="12dip"
    		android:background="@drawable/alphen_bigshop_3">
    		
    		<TextView 
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
				android:text="Alpen BigShop"
				android:textSize="20dip"
				android:textStyle="bold"    
				android:textColor="#B8D6EF"			
    		/>
    	</LinearLayout>
    	
    	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="horizontal"
    		android:gravity="center"
    		>
    	<ImageView
    		android:layout_width="140dip"
    		android:layout_height="180dip"
    		android:src="@drawable/moby_dick"
    		android:layout_margin="6dip"
    	/>
    	
    	<LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	
    	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="The Whale"
    		android:textSize="15dip"
    		android:textStyle="bold"
    		android:textColor="@color/textColor"		
    	/>
    	
    	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="(Kindle edition)"
    		android:textSize="15dip"
    		android:textStyle="bold"
    		android:textColor="@color/textColor"		
    	/>
    	
    	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Herman Merville(Author)"
    		android:textColor="@color/textColor"		
       	/>
    	
    	<RatingBar 
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		style="?android:attr/ratingBarStyleSmall"
    		android:numStars="5"
    		android:rating="3.5"
    	/>
    	
       	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="digital List Price : $15.44"
    		android:textColor="@color/textColor"		
       	/>
       	
       	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Print List Price : $14:55"
    		android:textColor="@color/textColor"		
       	/>
       	
       	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Kindle Price : $9.12"
    		android:textColor="@color/textColor"		
       	/>
       	
       	 	<TextView
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="Total Save : $5.32"
    		android:textColor="@color/textColor"		
       	/>
       	
    	</LinearLayout>
    	
    	</LinearLayout>
    	
    	<LinearLayout
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical"
    		android:padding="20dip"
    		android:background="@drawable/purchase_button_background"
    		android:layout_margin="15dip"
    		>
    		<Button
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:text="Buy Now With in 1-Click"
    		/>
	    	<Button
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:text="Try a Sample"
    		/>
    	</LinearLayout>
    	<TextView 
    		
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:textColor="@color/textColor"
    		android:text="@string/book_description"
    		android:padding="15dip"
    	/>
    	</LinearLayout>
  	</ScrollView>	
		
		
</LinearLayout>
